datasource db {
    provider = "mongodb"
    url      = env("MONGODB_URI")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id String @id @default(auto()) @map("_id")  @db.ObjectId
    email String @unique
    username String
    password String
    avatar String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

